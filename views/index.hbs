<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nam's Website</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="root">
        <div class="header">
            <img src="cover1.jpg" alt="Cover Page" width="100%" height="300px">
        </div>
        <div class="container">
            <div class="left">
                <a href="/">Home</a>
                <br>
                <a href="/insert">New Product</a>
                <br>
            </div>
            <div class="right">
                <h1> All Products </h1>
                    <form action="/doSearch" method="post">
                        <input type="text" name="txtName" id="" placeholder="Name">
                        <input style="background-color: #009879;" type="submit" value="Search">
                    </form>
                <table class = "content-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Size</th>
                            <th>Origin</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        {{#each model}}
                            <tr>
                                <td>{{productName}}</td>
                                <td>{{price}}</td>
                                <td>{{size}}</td>
                                <td>{{origin}}</td>
                                <td><a href="/delete?id={{_id}}" onclick="return confirmXoa('{{productName}}')">Delete</a></td>
                                <td><a href="/Edit?id={{_id}}">Edit</a></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <script>
        function confirmXoa(){
            let r = confirm('Do you want to delete ');
            return r;
        }
    </script>
    {{> footer}}

</body>
</html>